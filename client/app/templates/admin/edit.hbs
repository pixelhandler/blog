<p>
  <strong>Edit a Blog Post</strong>
</p>
{{#if isEditing}}
  <button {{action 'preview'}} class="u-button u-preview">Preview</button>
  <button {{action 'save'}} class="u-button u-save">Save</button>
  <button {{action 'cancel'}} class="u-button u-cancel">Cancel</button>
  <hr>
  {{partial 'admin/form'}}
{{else}}
  <button {{action 'edit'}} class="u-button u-edit">Edit</button>
  <button {{action 'cancel'}} class="u-button u-cancel">Cancel</button>
  <hr>

  {{partial 'admin/preview'}}
{{/if}}
